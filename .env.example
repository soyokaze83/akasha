# =============================================================================
# Akasha Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# LLM Configuration (REQUIRED - choose one provider)
# -----------------------------------------------------------------------------
# Which LLM provider to use: "gemini" or "openai"
LLM_PROVIDER=gemini

# Enable automatic fallback to the other provider when primary is rate-limited
# Requires both providers to have valid API keys configured
LLM_FALLBACK_ENABLED=true

# -----------------------------------------------------------------------------
# Gemini Configuration (required if LLM_PROVIDER=gemini, or for fallback)
# -----------------------------------------------------------------------------
# Get your API key from: https://makersuite.google.com/app/apikey
# Supports comma-separated keys for rotation on rate limits
GEMINI_API_KEY="key1,key2,key3"

# Model to use (optional, defaults to gemini-2.0-flash)
# GEMINI_MODEL=gemini-2.0-flash

# -----------------------------------------------------------------------------
# OpenAI Configuration (required if LLM_PROVIDER=openai, or for fallback)
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Model to use (optional, defaults to gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# WhatsApp Recipients (REQUIRED)
# -----------------------------------------------------------------------------
# Comma-separated list of WhatsApp JIDs to receive daily passages
#
# Individual format: {country_code}{phone}@s.whatsapp.net
# Example: 6281234567890@s.whatsapp.net
#
# Group format: {group_id}@g.us
# Example: 120363024512399999@g.us
#
# To find group JID, use the GoWA API: GET http://localhost:3000/user/my/groups
WHATSAPP_RECIPIENTS=120363045745776185@g.us

# -----------------------------------------------------------------------------
# GoWA Configuration (for local development)
# -----------------------------------------------------------------------------
# These are pre-configured for Docker; only change for local dev without Docker
# GOWA_BASE_URL=http://localhost:3000
# GOWA_USERNAME=user1
# GOWA_PASSWORD=pass1

# Webhook secret for HMAC signature verification
# GOWA_WEBHOOK_SECRET=your-secret-key

# -----------------------------------------------------------------------------
# Scheduler Configuration
# -----------------------------------------------------------------------------
# Time to send daily Mandarin passage (24-hour format)
DAILY_PASSAGE_HOUR=7
DAILY_PASSAGE_MINUTE=0

# Timezone for scheduler (uses pytz timezone names)
TIMEZONE=Asia/Jakarta

TOPIC_SELECTION_MODE=web_search  # Options: web_search, free

# -----------------------------------------------------------------------------
# Reply Agent Configuration
# -----------------------------------------------------------------------------
# Enable/disable the Reply Agent (default: true)
REPLY_AGENT_ENABLED=true

# Google Custom Search API (required for Reply Agent web search)
# Get API key from: https://console.cloud.google.com/apis/credentials
# Create search engine at: https://programmablesearchengine.google.com/
GOOGLE_SEARCH_API_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-cx-id

# -----------------------------------------------------------------------------
# Chat Summarizer Configuration
# -----------------------------------------------------------------------------
# Enable/disable the Chat Summarizer (default: true)
CHAT_SUMMARIZER_ENABLED=true

# Maximum number of messages to summarize (default: 200)
CHAT_SUMMARIZER_MAX_MESSAGES=200

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# DEBUG=false
# LOG_LEVEL=INFO
